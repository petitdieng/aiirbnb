<div class="container d-flex justify-content-center align-items-center min-vh-90">
  <div class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Creer son compte</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :fullname, "Nom complet", class: 'form-label' %>
        <%= f.text_field :fullname, class: 'form-control', autofocus: true, autocomplete: "fullname", placeholder: "nom complet", required: true %>
        <div class="invalid-feedback">
          Veuillez entrer votre nom complet.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Adresse e-mail", class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control', autocomplete: "email", placeholder: "adresse e-mail", required: true %>
        <div class="invalid-feedback">
          Veuillez entrer une adresse e-mail valide.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <% if @minimum_password_length %>
        <em class="form-text text-muted">(<%= @minimum_password_length %> caracteres au minimum)</em>
        <% end %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "Mot de passe", required: true %>
        <div class="invalid-feedback">
          Veuillez entrer votre mot de passe.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "Confirmer mot de passe", required: true %>
        <div class="invalid-feedback">
          Veuillez entrer confirmer votre mot de passe.
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :avatar, class: 'form-label' %>
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>

      <div class="d-grid">
        <%= f.submit "S'inscrire", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
